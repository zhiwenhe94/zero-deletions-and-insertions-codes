               x:=[0,0,0,0,0];
               x[1]:=g1[1];
               x[2]:=g1[2];
               x[3]:=g1[3];
               x[4]:=g2[1]*D;
               x[5]:=g2[2]*D;
               At5 join:={x};
         end for;
     end for;
end for;
return At5;
end function;

