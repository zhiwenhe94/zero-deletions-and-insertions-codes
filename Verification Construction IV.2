CsAt5:=function(t);
Y:={};
for y0,y1 in [0..t] do 
     if y0+y1 eq t then Y join:={[y0,y1]};end if;
end for;

At5:={};
for y in Y do 
     A3:=CsA3(y[1]);
     C2s:=C2(y[2]);
